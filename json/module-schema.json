{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "HAS Module Manifest",
    "description": "Manifest for HAS module: https://www.mega.com",
    "type": "object",
    "required": ["id", "description"],
    "definitions": {
        "VersionRange" : {
            "type": "string",
            "description": "Version range see https://docs.microsoft.com/fr-fr/nuget/concepts/package-versioning#version-ranges"
        }
    },
    "properties": {
        "Properties": {
            "type": "object",
            "additionalProperties": {
                "type":"string",
                "description": "Additional module properties"
            }
        },
        "moduleType": {
            "type": "string",
            "enum": ["AddOn", "Core", "System"]
        },
        "version": {
            "type": "string",
            "pattern": "^([0-9]+)\\.([0-9]+)\\.([0-9]+)$"
        },
        "productName": {
            "type": "string",
            "description": "Product name"
        },
        "id": {
            "type": "string",
            "pattern": "^[A-Za-z_0-9][A-Za-z0-9_\\.-]*$",
            "description": "Module unique id"
        },
        "name": {
            "type": "string",
            "pattern": "^[a-z_][a-z0-9_\\s\\.-]+$"
        },
        "description": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "copyright": {
            "type": "string"
        },
        "sourceRepositoryUrl": {
            "type":"string"
        },
        "jsAddonsPaths": {
            "type": "array",
            "description": "Embedded module script to include in Web Desktop page",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "format": "uri-reference"
            }
        },
        "excludedMetricPaths": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "enabledOnSettingsMode": {
            "type": "boolean",
            "description": "Set to true if the module must be loaded in HAS settings mode (before database initialization)"
        },
        "showInPortal": {
            "type": "boolean",
            "description": "Add a shorcut to the module in the Portal page"
        },
        "ignoreSynchronization": {
            "type": "boolean",
            "description": "False if the module must not be synchronizes betwwen cluster nodes"
        },
        "dependencies": {
            "type": "array",
            "description": "Module dependency constraints",
            "items": {
                "type": "object",
                "required": ["id"],
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Dependent module id"
                    },
                    "version": {
                        "$ref": "#/definitions/VersionRange",
                        "description": "Dependent module version range"
                    },
                    "optional" : {
                        "type": "boolean",
                        "description": ""
                    }
                },
                "additionalProperties": false
            },
            "additionalProperties": false
        },
        "serverVersionRange": {
            "$ref": "#/definitions/VersionRange",
            "description": "HAS version range constraint"
        },
        "tags": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "kind": {
            "type": "string",
            "enum": ["Site", "WebService", "Tool", "Container", "CustomData", "Hopex", "Redis", "Macro", "Data", "Extension"]
        },
        "requireLicenseAcceptance": {
            "type": "boolean"
        },
        "licenseUrl": {
            "type": "string",
            "format": "uri"
        },
        "helpUrl": {
            "type": "string",
            "format": "uri"
        },
        "nodeRoleConstraints": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": ["Front", "Back", "Jobs"]
            }
        },
        "isSystem": {
            "type": "boolean"
        },
        "consoleMenuText": {
            "type":"string"
        },
        "consoleMenuPath": {
            "type": "string",
            "format": "uri-reference"
        },
        "package" : {
            "type": "array",
            "description": "File mappings used to generate the Hopex module",
            "items": {
                "type":"object",
                "required": ["to"],
                "properties": {
                    "from": {
                        "type":"string"
                    },
                    "to": {
                        "type": "string"
                    },
                    "includes": {
                        "type": "array",
                        "items": {
                            "type":"string"
                        }
                    },
                    "excludes": {
                        "type": "array",
                        "items": {
                            "type":"string"
                        }
                    }
                }
            }
        },
        "additionalFiles" : {
            "type": "array",
            "description": "File mappings to include in the module package",
            "items": {
                "type":"object",
                "required": ["to"],
                "properties": {
                    "from": {
                        "type":"string"
                    },
                    "to": {
                        "type": "string"
                    },
                    "includes": {
                        "type": "array",
                        "items": {
                            "type":"string"
                        }
                    },
                    "excludes": {
                        "type": "array",
                        "items": {
                            "type":"string"
                        }
                    }
                }
            }
        }        
    },
    "dependencies": {
        "consoleMenuText": [
            "consoleMenuPath"
        ],
        "consoleMenuPath": [
            "consoleMenuText"
        ],
        "requireLicenseAcceptance": [
            "licenseUrl"
        ]
    },
    "if": {
        "properties": { "kind": { "const": "Site" } }
    },
    "then": {
        "properties": { 
            "pathPrefix": {
                "type": "string",
                "format": "uri-reference",
                "description": "Module path prefix"
            }
        }
    }
}
